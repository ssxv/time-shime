<Page x:Class="Time_Shime.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Time_Shime"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<Pivot x:Uid="pivotSettings"
		   Title="Time Shime">
		<PivotItem x:Uid="pivotAbout"
				   Header="About"
				   Margin="12,0,12,20">
			<ScrollViewer VerticalScrollMode="Enabled">
				<StackPanel>
					<TextBlock Text="Time Shime"
							   FontSize="20"
							   TextWrapping="Wrap" />
					<TextBlock x:ConnectionId='4' Name="version"
							   Text="Version" />
					<StackPanel Margin="0,20,0,0" Orientation="Horizontal">
						<SymbolIcon x:ConnectionId='6' Name="symbol" Symbol="Clear"
									Margin="0,0,10,0" />
						<TextBlock x:ConnectionId='7' Name="status"
								   Text="App is not running"
								   TextWrapping="Wrap" />
					</StackPanel>
					<TextBlock Text="No personal information or private information about you or your device is collected or transmitted by this app !"
							   Margin="0,20,0, 0"
							   TextWrapping="Wrap" />
					<Button x:ConnectionId='5' Name="shareAppButton"
							Margin="0,20,0, 20"
							Content="Share this app"
							                             />
				</StackPanel>
			</ScrollViewer>
		</PivotItem>
		<PivotItem x:Uid="pivotCredits"
				   Header="Credits"
				   Margin="12,0,12,20">
			<ScrollViewer VerticalScrollMode="Enabled">
				<StackPanel>
					<TextBlock Text="Developer"
							   FontSize="25" />
					<TextBlock Margin="0,20,0, 20"
							   Text="Satyendra Singh" />
					<HyperlinkButton x:ConnectionId='1'                       >
						<TextBlock Text="Linkedin" />
					</HyperlinkButton>
					<HyperlinkButton x:ConnectionId='2'                      >
						<TextBlock Text="Twitter" />
					</HyperlinkButton>
					<HyperlinkButton x:ConnectionId='3'                       >
						<TextBlock Text="Facebook" />
					</HyperlinkButton>
				</StackPanel>
			</ScrollViewer>
		</PivotItem>
	</Pivot>
</Page>

